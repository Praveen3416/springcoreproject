<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean name="engine" class="com.springcore.xml.di.setter.Engine">
        <property name="type" value="V8"/>
        <property name="horsePower" value="450"/>
        <property name="fuelType" value="Petrol"/>
    </bean>

    <bean name="car" class="com.springcore.xml.di.setter.Car">

        <property name="model" value="Mustang"/>
        <property name="year" value="2021"/>
        <property name="engine" ref="engine"/>
    </bean>
</beans>